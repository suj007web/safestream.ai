{
  "name": "clerk-chrome-extension-quickstart",
  "displayName": "Clerk chrome extension quickstart",
  "version": "0.0.1",
  "description": "A basic implementation of Clerk with a Plasmo-based Chrome Extension.",
  "author": "Clerk",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.0.0",
    "plasmo": "0.90.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "19.0.11",
    "@types/react-dom": "19.0.4",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "cookies",
      "storage"
    ],
    "host_permissions": [
      "http://localhost/*",
      "$CLERK_FRONTEND_API/*"
    ],
    "key": "$CRX_PUBLIC_KEY"
  }
}
